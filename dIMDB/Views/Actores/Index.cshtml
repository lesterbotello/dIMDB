@model IEnumerable<dIMDB.Models.Actores>

@{
    ViewBag.Title = "Actores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Actores</h2>

<p>
    <i class="fa fa-plus"></i>&nbsp;
    @Html.ActionLink("Nuevo Actor", "Create")
</p>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Buscar:</label>
            <div class="col-md-10">
                <input type="text" name="inpNombre" class="form-control" placeholder="Introduzca el texto de búsqueda" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Filtrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LugarNacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LugarNacimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaNacimiento)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Actores", new { id = item.IDActor })">
                            <i class="fa fa-pencil"></i>
                        </a> |
                        <a href="@Url.Action("Details", "Actores", new { id = item.IDActor })">
                            <i class="fa fa-info-circle"></i>
                        </a> |
                        <a href="@Url.Action("Delete", "Actores", new { id = item.IDActor })">
                            <i class="fa fa-times"></i>
                        </a>
                        @*@Html.ActionLink("Modificar", "Edit", new { id = item.IDActor }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.IDActor }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IDActor })*@
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">
                    <div class="alert-danger" style="text-align: center">No existen registros que coinciden con la búsqueda</div>
                </td>
            </tr>
        }
    }

</table>
