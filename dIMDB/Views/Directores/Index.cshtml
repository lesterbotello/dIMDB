@model IEnumerable<dIMDB.Models.Directores>

@{
    ViewBag.Title = "Directores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Directores</h2>
<p>
    <i class="fa fa-plus"></i>&nbsp;
    @Html.ActionLink("Nuevo Director", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LugarNacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LugarNacimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaNacimiento)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Directores", new { id = item.IDDirector })">
                <i class="fa fa-pencil"></i>
            </a> |
            <a href="@Url.Action("Details", "Directores", new { id = item.IDDirector })">
                <i class="fa fa-info-circle"></i>
            </a> |
            <a href="@Url.Action("Delete", "Directores", new { id = item.IDDirector })">
                <i class="fa fa-times"></i>
            </a>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.IDDirector }) |
            @Html.ActionLink("Details", "Details", new { id=item.IDDirector }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDDirector })*@
        </td>
    </tr>
}

</table>
